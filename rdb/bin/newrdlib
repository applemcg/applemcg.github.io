{ 
    : date: 2017-05-12;
    zcat h.$1.Z | column {insert,delete}_time | rd sort | rduniq
}
rdb_today () 
{ 
    set -- $(yymmdd)000000 ${1:-tasks};
    rdb_data $2 | row "delete_time > $1 || insert_time > $1"
}
