update_history () 
{ 
    : display count of records with same insertion-deletion time;
    : date: 2021-05-04;
    report_notpipe && return 1;
    column {insert,delete}_time | sorttable | rduniq
}
recovery_history () 
{ 
    : date: 2021-04-30;
    : date: 2021-05-04;
    if_missingargs 1 $* && return 1;
    local file=$1;
    local hist=.hry/$file.Z;
    report_notfile $hist && { 
        comment no $hist;
        return 1
    };
    [[ -f $file ]] && { 
        comment move file to safty and rerun;
        return 2
    };
    zcat $hist | row '!delete_time' | ncolumn {insert,delete}_time | $file
}
echo rdb_init 1>&2
echo rdbcmd_init 1>&2
