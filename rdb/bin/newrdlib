column_data () 
{ 
    rdb_datafrom column $*
}
column_unique () 
{ 
    cat $2 | rdb_datafrom column $1
}
filesize () 
{ 
    report_notargcount 1 $# file ... && return 1;
    case $# in 
        1)
            set -- $(wc -c $1);
            echo $1
        ;;
        *)
            rdb_hdr Offset Filename;
            wc -c $* | awk '$2 !~ /^total$/'
        ;;
    esac
}
