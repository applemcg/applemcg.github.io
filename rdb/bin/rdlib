}
spacesToTab () 
{ 
    : convert leading spaces to a TAB, repeat as necessary;
    : date: 2021-03-23;
    : date: 2021-03-24;
    : date: 2021-05-05;
    case $# in 
        0)
            report_notpipe && return 1;
            cat -
        ;;
        1)
            : convert the first string of spaces, 1 or more to a tab;
            sed 's/  */	/'
        ;;
        *)
            : repeat as necessary;
            $(myname) $1 | $(myname) ${*:2}
        ;;
    esac
}
rdfields () 
{ 
    : date: 2021-05-13;
    report_notfile ${1:-/dev/null} && return 1;
    sed 1q $1
}
list_vstable () 
{ 
    : date: 2021-08-17;
    : date: 2021-08-18;
    if_missingargs 1 $* && return;
    set -- ${1%.*}.{lst,rdb,tmp};
    [[ -f $1 ]] || { 
        $(myname);
        return
    };
    [[ -f $2 ]] || { 
        $(myname);
        return
    };
    listtotable < $1 | sorttable | tee $3 | diff - $2
}
lst_canon () 
{ 
    : compliment of RDB_CANON, leaves an RDB copy of a newer LST;
    : date: 2021-08-18;
    report_notfile $1 && return 1;
    set $1 ${1%.lst}.rdb;
    newest $2 $1 || tabletolist < $2 > $1;
    listtotable < $1 | onlyChanged $2;
    rdb_canon $2;
    comment rm -f $2 ??
}
listortable () 
{ 
    : related: tableorlist, i.e. why not?;
    : date: 2021-08-21;
    : library: rdlib;
    : date: 2021-08-22;
    tableorlist $@
}
list_toedit () 
{ 
    : new list updates table and table generates its list;
    : todo: fix tables, ro this function;
    : library: rdlib;
    : date: 2021-08-22;
    if_missingargs 1 $* && return;
    set -- ${1%.*}.{rdb,lst};
    comment $(ls -l $1);
    comment $(ls -l $2);
    [[ -f $2 ]] && { 
        newest $1 $2 || { 
            comment List: $2 is newer;
            listtotable < $2 > $1;
            comment $(ls -l $1)
        }
    };
    rdb_canon $1;
    comment $(ls -l .hry/$1.Z);
    tabletolist < $1 | onlyChanged $2;
    comment $(ls -l $2)
}
