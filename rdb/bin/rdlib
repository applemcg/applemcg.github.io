{ 
    : just the ABSTR and TODO columns;
    tbl_fmlist | row 'tag ~ /abstr/ || tag ~ /todo/'
}
fold_b () 
{ 
    : the latet hdr record;
    cat $(ls -t *.hdr | sed 1q)
}
from_trto () 
{ 
    : move tag-record pairs to attirb ... columns;
    addcol $* | compute "$(tag_fmrecord $*)" | ncolumn tag record
}
