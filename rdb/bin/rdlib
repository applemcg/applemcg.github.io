width () 
{ 
    report_notpipe && return 1;
    column $* | tawk '

    function max(x, y) { return ((x>y)? x : y); }
    function min(x, y) { return ((x<y)? x : y); }    

    NR == 1 { for (i=1; i<=NF; i++) {
                  w[i] = 0
              }
              num = NF
            }
    NR <= 2 { print }	    
    NR > 2  { for (i=1; i<=NF; i++) {
                  w[i] = max(w[i], length( $i) )
	      }
            }
    END     { printf "%7d", w[1];
              for(i=2; i<=num; i++) {
                    printf "\t%7d", w[i]
              }
              printf "\n"
            }'
}
bsr_rdb () 
{ 
    : converts leading blank separated records into an RDB table;
    : .. where the records last field may have spaces. The first record;
    : .. is the field names. NO dash separators required.;
    : date: 2021-03-23;
    : date: 2021-03-24;
    : date: 2021-05-05;
    report_notpipe && return 1;
    read HEAD;
    read_devtty HEAD $HEAD;
    rdb_hdr $HEAD;
    cat - | spacesToTab $(expr $# - 1 )
}
