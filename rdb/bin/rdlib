rdb () 
{ 
    : list all /RDB programs in rdb/bin directory;
    : hidden first argument, the;
    : date: 2020-04-11;
    function _rdb () 
    { 
        local c="--------";
        local f="---------";
        fmt="%s\n%s\n%s\n";
        printf $fmt $c commands $c;
        ls | grep -v ^_;
        printf $fmt $f functions $f;
        functions rdlib | grep -v ^_ | sort
    };
    function _rdb_post () 
    { 
        : supply alternative to condition rdb output;
        : date: 2020-04-11;
        report_notpipe && return 1;
        pr -${1:-4} -t
    };
    indir ${RDB_HOME}/bin _rdb | _rdb_post $1;
    unset _rdb{,_post}
}
rdb_awklib () 
{ 
    : function lib for rdb commands;
    ${*:-echo} $(applemcg echo)/rdb/lib/awklib
}
rdb_canon () 
{ 
    : default state of /RDB file: TABLE and PACKED HISTORY,;
    : existing HISTORY is PACKED, {un}compress toggles the state;
    : new FEATURE, History will Add, Remove Fields;
    : .. according to the fields currently in the TABLE. while this;
    : .. may be risky, the intention is to facilitate adding fields;
    : .. to the history rather than deleting any. ~ Later.;
    : date: 2019-08-31;
    : date: 2019-09-07, awk NF idiom = no empty records;
    : date: 2019-09-08, new FEATURE;
    : date: 2020-05-18;
    : date: 2020-06-20;
    : date: 2021-06-19;
    : date: 2021-07-02;
    report_notfile $1 && return 1;
    : Three files - R, the Rdb Table, H, the table History, Z, the packed history;
    local r=$1;
    local h=$(needir .hry)/$1;
    local z=$h.Z;
    read_devtty "r: $r";
    read_devtty "h: $h";
    read_devtty "z: $z";
    [[ -s $h ]] || rm -f $h;
    [[ -s $z ]] || rm -f $z;
    while true; do
        set -- $(newest_first $r $h $z | tr '\n' : ; echo);
        read_devtty "A: $# $*";
        case $1 in 
            $z:*:$r | $z:$r:*)
                read_devtty "B: $*";
                : the Packed is the Newest of three, so;
                rm -f $h;
                return
            ;;
            $r:$h:*)
                : History has 2 prelim fields -- {insert,delete}_time;
                set -- $(fieldsof $h);
                read_devtty "C1: $*";
                shift 2;
                local hhdr="$*";
                read_devtty "hhdr: $hhdr";
                : Rdb table header defines data fields;
                set -- $(fieldsof $r);
                read_devtty "C2: $*";
                local rhdr="$*";
                read_devtty "rhdr: $rhdr";
                : if identical all is well;
                [[ $rhdr = $hhdr ]] || { 
                    : if not, then restore, compress the History;
                    comment ERROR, unable to REPAIR $h from $r;
                    comment "R: $rhdr,  H: $hhdr";
                    compress $h;
                    return 1
                };
                : A, OK, so add the current Rdb table to the History;
                h_update $r
            ;;
            $r:$z:*)
                : leave the Rdb Table newer than the History, and continue;
                uncompress -f $z;
                touch $r
            ;;
            $r:*)
                : theres no History or Packed copy, so;
                : put the header in the History file;
                rdb_hdr {insert,delete}_time $(fieldsof $r) > $h;
                : touch the table, to update the Packed History, on the next pass;
                touch $r
            ;;
            $h:*)
                : if, for any reason, the History is newest,;
                compress -f $h
            ;;
            $z:*)
                : the Packed History is newest, so at a minimum,;
                : restore the RDB Table;
                zcat $z | row !delete_time | ncolumn {insert,delete}_time | awk NF > $r;
                touch $z
            ;;
            *)
                app_trace "ERROR, no matching files: $*";
                return
            ;;
        esac;
    done
}
rdb_col () 
{ 
    : app_trace $*;
    rdb_data $1 | rdb_current | column $2
}
rdb_column () 
{ 
    read_devtty $*;
    local file=$1;
    shift;
    local colm=$1;
    shift;
    set -- $(fieldsof $file);
    read_devtty colm, args: $colm, $*;
    local C=0;
    for a in $*;
    do
        (( C += 1 ));
        [[ "$colm" = $a ]] && { 
            read_devtty FOUND colm, C: $colm, $C;
            echo $C;
            return 0
        };
    done;
    return 1
}
