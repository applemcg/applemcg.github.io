rdb_next () 
{ 
    : repair RDB table with first COMMAND;
    : date: 2017-04-07;
    : args: RDB-table "command with args";
    : date: 2017-04-09;
    : date: 2017-05-12;
    report_notargcount 2 $# && return 1;
    set ${1%.rdb}.{rdb,nxt} "${*:2}";
    report_notfunction $3 && return 2;
    report_notfile $1 && return 3;
    read_devtty DOES ${*:3};
    awk NF $1 | does ${*:3} > $2;
    cat $2 | onlyChanged $1;
    nrdp $1;
    tomorrow rm -f $2
}
