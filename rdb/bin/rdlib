good_status () 
{ 
    : date: 2020-09-24;
    set -- statusvalue.rdb cmmd_status.rdb;
    report_notfile $1 && return 1;
    report_notfile $2 && return 2;
    comm -13 <(column status < $1  | sorttable -u | headoff) <(column status < $2  | sorttable -u | headoff)
}
