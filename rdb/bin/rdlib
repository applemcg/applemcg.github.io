rdb_hdr () 
{ 
    : date: 2017-05-12;
    : app_trace $*;
    : first the names, then equal-width dashes,;
    : with one or more, spaces to a single TAB;
    ( echo $*;
    echo $* | tr 'a-zA-Z0-9_' '-' ) | sed 's/  */ /g' | tr ' ' '\t'
}
