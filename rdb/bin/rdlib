todaysdate () 
{ 
    : in ceiu formats, computer european, iso {default}, US, YYYYmmdd: 8;
    : date: 2020-09-19;
    set -- ${1:--i};
    case $1 in 
        -c)
            date +%y%m%d
        ;;
        -e)
            date +%d/%m/%y
        ;;
        -i)
            date +%F
        ;;
        -u)
            date +%x
        ;;
        -8)
            date +%Y%m%d
        ;;
        *)
            $(myname)
        ;;
    esac
}
